<h1 class="form-title">Step 3: Amenities</h1>
<form action="/addnewairbnb/4" method="get" class="amenities-form">
  <input type="hidden" name="name" value="{{formData.name}}" />
  <input type="hidden" name="summary" value="{{formData.summary}}" />
  <input type="hidden" name="price" value="{{formData.price}}" />
  <input type="hidden" name="bedrooms" value="{{formData.bedrooms}}" />
  <input type="hidden" name="beds" value="{{formData.beds}}" />
  <input type="hidden" name="bathrooms" value="{{formData.bathrooms}}" />

  <div class="form-group">
    <label for="amenities" class="form-label">Amenities (Comma-separated):</label>
    <textarea
      id="amenities"
      name="amenities"
      class="form-textarea"
      required
    ></textarea>
  </div>

  <button type="submit" class="form-button">Next</button>
</form>