<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header class="header">
      <nav class="nav">
        <a href="/" class="nav-link">Home</a>
        {{#if isAuthenticated}}
          <a href="/addnewairbnb" class="nav-link">Add New</a>
          <form action="/airbnb/logout" method="post" class="logout-form">
            <button type="submit" class="logout-button">Logout</button>
          </form>
        {{else}}
          <a href="/airbnb/login" class="nav-link">Login</a>
        {{/if}}
        <form action="/search" method="get" class="search-form">
          <label for="searchName" class="search-label">Search:</label>
          <input
            type="text"
            id="searchName"
            name="name"
            placeholder="Enter name"
            required
            class="search-input"
          />
          <button type="submit" class="search-button">Go</button>
        </form>
      </nav>
    </header>
    <main class="main-content">
      {{{body}}}
    </main>
    <footer class="footer">
      {{! add footer here }}
    </footer>
  </body>
</html>