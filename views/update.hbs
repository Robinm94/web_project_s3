<h1>Update Airbnb: {{listing.name}}</h1>

<form action="/update/airbnb/{{listing._id}}" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="{{listing.name}}" required><br><br>

    <label for="summary">Summary:</label>
    <textarea id="summary" name="summary" required>{{listing.summary}}</textarea><br><br>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="{{listing.price}}" required><br><br>

    <label for="bedrooms">Bedrooms:</label>
    <input type="number" id="bedrooms" name="bedrooms" value="{{listing.bedrooms}}" required><br><br>

    <label for="bathrooms">Bathrooms:</label>
    <input type="number" id="bathrooms" name="bathrooms" value="{{listing.bathrooms}}" step="0.1" required><br><br>

    <label for="amenities">Amenities (Comma-separated):</label>
    <textarea id="amenities" name="amenities" required>{{listing.amenities}}</textarea><br><br>

    <button type="submit" style="background-color: green; color: white; padding: 10px 20px; border: none; cursor: pointer;">
        Update
    </button>
</form>
