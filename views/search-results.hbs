<h1>Search Results for "{{searchName}}"</h1>

<ul>
    {{#each results}}
    <li>
        <h2>{{this.name}}</h2>
        <a href="/api/airbnb/{{this._id}}">View Details</a>
        <p>{{this.summary}}</p>
        <p><strong>Price:</strong> ${{this.price}}</p>
    </li>
    {{/each}}
</ul>

<div>
    <!-- Previous and Next buttons -->
    {{#if hasPrevPage}}
    <a href="/search?name={{searchName}}&page={{dec page}}&limit=10">Previous</a>
    {{/if}}

    <span>Page {{page}} of {{totalPages}}</span>

    {{#if hasNextPage}}
    <a href="/search?name={{searchName}}&page={{inc page}}&limit=10">Next</a>
    {{/if}}
</div>

<div>
    <!-- Jump to specific page -->
    <form action="/search" method="get" style="margin-top: 10px;">
        <input type="hidden" name="name" value="{{searchName}}">
        <label for="pageInput">Go to page:</label>
        <input type="number" id="pageInput" name="page" min="1" max="{{totalPages}}" value="{{page}}" required>
        <input type="hidden" name="limit" value="10">
        <button type="submit">Go</button>
    </form>
</div>
